{% extends 'WebdevBlogBundle::layout.html.twig' %}

{% block title %}
	Tag: {{ tag.name }}
{% endblock %}

{% block content %}
	
	<h2>{{ tag.name }}</h2>
	{% for post in tag.posts %}
		{% include 'WebdevBlogBundle:Post:postPreview.html.twig' with { 'post': post } %}
	{% else %}
		<p>Keine Posts zugeordnet.</p>		
	{% endfor %}
	
{% endblock %}

{% block stylesheets %}

	{{ parent() }}
	
	{% stylesheets
		'@WebdevBlogBundle/Resources/public/css/post/post_preview.css'
		output='resources/compiled/tag.css'
		filter='yui_css'
	%}
			
		<link href="{{ asset_url }}" rel="stylesheet" type="text/css">
			
	{% endstylesheets %}

{% endblock %}